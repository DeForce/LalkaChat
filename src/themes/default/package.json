    "collectCoverageFrom": [
      "**/*.{component,service}*.{js,jsx}"
    ],
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "testRegex": "\\.(test|spec)\\.(js|jsx)$"
